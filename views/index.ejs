    <main class="container">
        <section class="container__header">
            <h1 class="container__header__title">TO DO LIST</h1>
        </section>
        <section class="container__body">

            <div class="container__body__wrapper" id='projects'>
                <article v-for='project of projects' class="container__body__wrapper__project" :class='project.category' :id="project._id">
                    <h2 class="container__body__wrapper__project__title">{{ project.name }}</h2>
                    <button class="container__body__wrapper__project__add">+</button>
                    <div v-for='task of tasks' class="container__body__wrapper__project__loop">
                        <div v-if='project._id == task.prjctID' class="container__body__wrapper__project__loop__task" :class='task.type' :id="task._id">{{ task.task }}</div>
                    </div>
                </article>

                <form id='newproject'>
                    <article class="container__body__wrapper__new">
                            <input type="text" name='name' placeholder="NEW PROJECT" class="container__body__wrapper__new__name"><button type='button' class="container__body__wrapper__new__add">+</button>
                    </article>
                    <div class="container__body__wrapper__categories">
                        <div class="container__body__wrapper__categories__tags">
                            <input name="category" type="text" value="games" class="games" disabled>
                        </div>
                        <div class="container__body__wrapper__categories__tags">
                            <input name="category" type="text" value="social" class="social" disabled>
                        </div>
                        <div class="container__body__wrapper__categories__tags">
                            <input name="category" type="text" value="work" class="work" disabled>
                        </div>
                        <div class="container__body__wrapper__categories__tags">
                            <input name="category" type="text" value="misc" class="misc" disabled>
                        </div>
                    </div>
                </form>
            </div>
        </section>
        <section class="container__footer">
            Copyright Â© 2021
        </section>
    </main>

    <div class="bg"></div>
    
    <script>

        Vue.createApp({
            data() {
                return {
                    projects: JSON.parse('<%- getPrjct %>'),
                    tasks: JSON.parse('<%- getTasks %>')
                }
            }
            
        }).mount('#projects')

    </script>
    <script src='/main.js'></script>
